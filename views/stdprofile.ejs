<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
    />
    <link rel="stylesheet" href="/stylesheets/student.css" />
    <script
      type="module"
      src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.esm.js"
    ></script>
    <script
      nomodule
      src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.js"
    ></script>
  </head>
  <body>
    <div id="main">
      <%- include('./partials/header') %>
      <div id="right">
        <%- include('./partials/right-header') %>
        <form action="/update/profile/<%= founduser._id %>" method="post" class="popa">
          <h1>Student Profile</h1>
          <div class="flex">
            <label for="firstName">First Name:</label>
            <input style="width: 50%;" name="firstName" type="text" value="<%=founduser.firstName %>">
          </div>
          <div class="flex">
            <label for="lastName">Last Name:</label>
            <input style="width: 50%;" name="lastName" type="text" value="<%=founduser.lastName %>">
          </div>
          <div class="flex">
            <label for="fatherName">Father's Name:</label>
            <input style="width: 50%;" name="fatherName" type="text" value="<%=founduser.fatherName %>">
          </div>
          <div class="flex">
            <label for="email">Email:</label>
            <input style="width: 50%;" name="email" type="text" value="<%=founduser.email %>">
          </div>
          <div class="flex">
            <label for="gender">Gender:</label>
            <input style="width: 50%;" name="gender" type="text" value="<%=founduser.gender %>">
          </div>
          <div class="flex">
            <label for="contactNumber">Contact Number:</label>
            <input style="width: 50%;" name="contactNumber" type="text" value="<%=founduser.contactNumber %>">
          </div>
          <div class="flex">
            <label for="course">Course:</label>
            <span id="course" ><%founduser.course.forEach(e=>{ %> <%= e.courseCode %> <% }) %></span>
          </div>
          <div class="flex">
            <label for="qualification">Qualification:</label>
            <input style="width: 50%;" name="qualification" type="text" value="<%=founduser.qualification %>">
          </div>
          <div class="flex">
            <label for="address">Address:</label>
            <input style="width: 50%;" name="address" type="text" value="<%=founduser.address %>">
          </div>
          <div class="flex">
            <label for="enquiryDate">Enquiry Date:</label>
            <span id="enquiryDate"
              ><%=founduser.enquiryDate.toDateString() %></span
            >
          </div>
          <div class="flex">
            <label for="joiningDate">Joining Date:</label>
            <span id="joiningDate"
              ><%=founduser.joiningDate.toDateString() %></span
            >
          </div>
          <div class="flex">
            <label for="installmentAmount">Installment Amount:</label>
            <input style="width: 50%;" name="installment" type="text" value="<%=founduser.installment %>">
          </div>
          <div class="flex">
            <label for="dueAmount">Due Amount:</label>
            <input style="width: 50%;" name="due" type="text" value="<%=founduser.due %>">
          </div>
          <div class="flex">
            <label for="paymentStatus">Payment Status:</label>
            <span id="registrationPayment"
              ><%=founduser.registrationPayment %></span
            >
          </div>
          <div class="flex">
            <label for="registrationPayment"
              >Registration Payment Method:</label
            >
            <span id="registrationPayment"
              ><%=founduser.registrationPaymentMode %></span
            >
          </div>
          <div class="flex">
            <label for="registrationPayment">Due Amount Date: </label>
            <span id="registrationPayment"><%=founduser.dueDate %></span>
          </div>
          <button class="btn btn-primary">update</button>
        </div>
      </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
