<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link
    rel="stylesheet"
    href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
  />
  <link rel="stylesheet" href="./stylesheets/inquiry.css" />
  <script
    type="module"
    src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.esm.js"
  ></script>
  <script
    nomodule
    src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.js"
  ></script>
</head>
<body>
    <div id="main">
        <%- include('./partials/header') %>
        <div id="right">
            <%- include('./partials/right-header') %>
            <div id="cover">
                <div class="dropdown">
                    <button class="btn btn-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                    Add Inquiry
                    </button>
                    <ul class="dropdown-menu">
                      <li><a class="dropdown-item" href="/allenquiry">All Inquiry</a></li>
                      <li><a class="dropdown-item" href="/rejected">Rejected Inquiry</a></li>
                    </ul>
                  </div>
                  <div class="inq">
                    <form action="/inquiry" method="post" class="row g-3">
                        <div class="col-md-6">
                          <label for="inputEmail4" class="form-label">Student Name</label>
                           <input required type="text" placeholder="Enter First Name" name="firstName" class="form-control" id="inputEmail4">
                        </div>
                        <div class="col-md-6">
                          <label for="inputPassword4" class="form-label">Student Surname</label>
                           <input required type="text" name="lastName" placeholder="Enter Last Name" class="form-control" id="inputPassword4">
                        </div>
                        <div class="col-12">
                          <label for="inputAddress" class="form-label">Student Email</label>
                           <input required type="email" name="email" class="form-control" id="inputAddress" placeholder="Enter Email Address">
                        </div>
                        <div class="col-12">
                          <label for="inputAddress" class="form-label">Name of Father / Husband</label>
                           <input required type="text" name="fatherName" class="form-control" id="inputAddress" placeholder="Enter Name Of Father / Husband">
                        </div>
                        <div class="col-12">
                          <label for="inputAddress2" class="form-label">Contact Number/ WhatsAap Number</label>
                           <input required type="number" name="contactNumber" class="form-control" id="inputAddress2" placeholder="Enter Contact Number">
                        </div>
                        <div class="col-md-6">
                          <label for="inputCity" class="form-label">Qualification</label>
                           <input required name="qualification" type="text" class="form-control" placeholder="Enter Qualification" id="inputCity">
                        </div>
                        
                        <div class="col-md-2">
                          <label for="inputZip" class="form-label">Permanent Address</label>
                           <input name="address" required type="text" placeholder="Address" class="form-control" id="inputZip">
                        </div>
                        <div class="col-md-2">
                            <label for="inputZip" class="form-label">Enquiry Date</label>
                             <input name="enquiryDate" required type="date" class="form-control" id="inputZip">
                          </div>
                        
                        </div>
                       <div class="inq">
                        <div class="col-md-4" style="margin-bottom: 1vmax;">
                    
                            <label for="male">Male</label>
                             <input required type="radio" id="male" name="gender" value="male">
                            
                            <label for="female">Female</label>
                             <input required type="radio" id="female" name="gender" value="female">
                          </div>
                          
                           <div class="row g-3">
                            <div class="col-md-12">
                                <label for="inputEmail4" class="form-label">Select Course</label>
                                <select name="course" id="inputState" class="form-select">
                                  <% course.forEach(e=>{ %>
                                    <option value="<%= e._id %>"><%= e.courseName %></option>
                                  <% }) %> 
                                </select>
                              </div>
                              <div class="col-6">
                                <label for="inputAddress" class="form-label">Enquiry By</label>
                                 <input required type="text" name="enquiryBy" class="form-control" id="inputAddress" placeholder="Enter Name">
                              </div>
                              <div class="col-6">
                                <label for="inputAddress2" class="form-label"> Like To Join </label>
                                 <input required type="date" name="joiningDate" class="form-control" id="inputAddress2" >
                              </div>
                              <div class="col-md-4">
                                <label for="inputState" class="form-label">You Came To Know About Institute By:</label>
                                <select id="inputState" name="reference" class="form-select">
                                  <option selected>Choose...</option>
                                  <option>Sign Board</option>
                                  <option>Advertisement Papers</option>
                                  <option>Google Search</option>
                                  <option>Instagram</option>
                                  <option>Facebook</option>
                                  <option>Personal Reference</option>
                                  <option>Other</option>
                                </select>
                              </div>
                              <div class="col-md-4">
                                <label for="inputState" class="form-label">Registration Payment Mode:</label>
                                <select name="registrationPaymentMode" id="inputState" class="form-select">
                                  <option selected>Cash</option>
                                  <option>Phone pe</option>
                                  <option>Google pay</option>
                                  <option>Cheque</option>
                                  
                                  
                                </select>
                              </div>
                            
                           </div>
                            <div class="row g-3" style="margin-top: 1vmax;">
                              <div class="col-md-6">
                                <label for="inputEmail4" class="form-label">Installment</label>
                                 <input required type="number" name="installment" class="form-control" id="inputEmail4" placeholder="Enter Installment Amount">
                              </div>
                              <div class="col-md-6" style="margin-top: 1vmax;">
                                <label for="inputPassword4" class="form-label">Due</label>
                                 <input required type="number" name="due" class="form-control" id="inputPassword4" placeholder="Enter Due Amount">
                              </div>
                            </div>
                            <div class="col-md-4" style="margin-top: 1vmax;">
                              <label for="inputState" class="form-label">Registration Payment:</label>
                              <select name="registrationPayment" id="inputState" class="form-select">
                                <option selected>Done</option>
                                <option>Not Done</option>
                                
                                
                                
                              </select>
                            </div>
                            <div class="col-md-6" style="margin-top: 1vmax;">
                              <label for="inputPassword4" class="form-label">Due Amount Date</label>
                               <input required type="date" name="dueDate" class="form-control" id="inputPassword4" placeholder="Enter Due Amount date">
                            </div>
                          
                        <div class="col-12"style="margin-top: 1vmax;" >
                          <button type="submit" class="btn btn-primary">Submit</button>
                        </div>
                    </div>
                </form>
                         
                  </div>
            </div>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>