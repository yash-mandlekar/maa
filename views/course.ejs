<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
    />
    <link rel="stylesheet" href="./stylesheets/course.css" />
    <script
      type="module"
      src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.esm.js"
    ></script>
    <script
      nomodule
      src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.js"
    ></script>
  </head>
  <body>
    <div id="main">
      <%- include('./partials/header') %>
      <div id="right">
        <%- include('./partials/right-header') %>
        <div class="contain">
          <div class="dropdown" style="margin-bottom: 1vmax">
            <button
              class="btn btn-secondary dropdown-toggle"
              type="button"
              data-bs-toggle="dropdown"
              aria-expanded="false"
            >
              Add Course
            </button>
            <ul class="dropdown-menu">
              <li>
                <a class="dropdown-item" href="/addFeeStructure"
                  >Add Fee Structure</a
                >
              </li>
            </ul>
          </div>
          <div class="packet">
            <div id="course">
              <h4 style="margin-bottom: 2vmax">Add course</h4>
              <form action="/course" method="post">
                <div class="mb-3">
                  <label for="exampleInputEmail1" class="form-label"
                    >Enter Course Name</label
                  >
                  <input
                    name="courseName"
                    type="text"
                    class="form-control"
                    id="exampleInputEmail1"
                    aria-describedby="emailHelp"
                  />
                </div>
                <div class="mb-3">
                  <label for="exampleInputPassword1" class="form-label"
                    >Enter Course Code</label
                  >
                  <input
                    name="courseCode"
                    type="text"
                    class="form-control"
                    id="exampleInputPassword1"
                  />
                </div>
                <div class="mb-3">
                  <label for="exampleInputPassword1" class="form-label"
                    >Enter Course Duration</label
                  >
                  <input
                    name="courseDuration"
                    type="text"
                    class="form-control"
                    id="exampleInputPassword1"
                  />
                  <div id="emailHelp" class="form-text">
                    Note: Duration must be in Months ex. 12 or 5.
                  </div>
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
              </form>
            </div>
            <div id="course-list">
              <h4 style="margin-bottom: 2vmax">Course List</h4>
              <table class="table">
                <thead>
                  <tr class="table-info">
                    <th scope="col">Sr. No.</th>
                    <th scope="col">Course Name</th>
                    <th scope="col">Course Code</th>
                    <th scope="col">Course Duration</th>
                    <th scope="col">Action</th>
                  </tr>
                </thead>
                <tbody>
                  <% course.forEach((course,i) => {%>
                  <tr>
                    <th scope="row"><%= i+1 %></th>
                    <td><%=course.courseName %></td>
                    <td><%=course.courseCode %></td>
                    <td><%=course.courseDuration%> Months</td>
                    <td>
                      <a href="/deletecourse/<%= course._id %>">
                        <button class="btn btn-danger">delete</button>
                      </a>
                    </td>
                  </tr>
                  <% }); %>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
